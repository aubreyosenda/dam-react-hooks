{
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "moduleFileExtensions": ["js", "jsx"],
  "testMatch": [
    "**/__tests__/**/*.js?(x)",
    "**/?(*.)+(spec|test).js?(x)"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/**/*.test.{js,jsx}",
    "!src/**/*.spec.{js,jsx}"
  ],
  "coverageDirectory": "coverage",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"]
}